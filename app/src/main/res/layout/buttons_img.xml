<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="230dp"
    android:layout_height="70dp"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:orientation="horizontal"
    android:baselineAligned="false"
    >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:paddingStart="10dp"
        android:paddingEnd="10dp">

        <Button
            android:id="@+id/btn1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/salami"
            tools:ignore="ButtonStyle" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_alignStart="@id/btn1"
            android:layout_alignTop="@id/btn1"
            android:layout_alignEnd="@id/btn1"
            android:layout_alignBottom="@id/btn1"
            android:layout_margin="1dp"
            android:text="@string/salami"
            android:gravity="center"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:paddingStart="10dp"
        android:paddingEnd="10dp">

        <Button
            android:id="@+id/btn3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/salami"
            android:layout_marginTop="15dp"
            tools:ignore="ButtonStyle" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_alignStart="@id/btn3"
            android:layout_alignTop="@id/btn3"
            android:layout_alignEnd="@id/btn3"
            android:layout_alignBottom="@id/btn3"
            android:layout_margin="1dp"
            android:text="@string/salami"
            android:gravity="center"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:paddingStart="10dp"
        android:paddingEnd="10dp">

        <Button
            android:id="@+id/btn2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/salami"
            android:layout_marginTop="15dp"
            tools:ignore="ButtonStyle" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_alignStart="@id/btn2"
            android:layout_alignTop="@id/btn2"
            android:layout_alignEnd="@id/btn2"
            android:layout_alignBottom="@id/btn2"
            android:layout_margin="1dp"
            android:text="@string/salami"
            android:gravity="center"/>
    </RelativeLayout>
</LinearLayout>